{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A radial bar chart with distinct segments for each category.",
    "height": 500,
    "width": 500,
    "data": {
      "url": "https://raw.githubusercontent.com/jfoo-monash/FIT_3179_Assignment_2/refs/heads/main/json/data/top5.csv"
    },
    "transform": [
      {
        "calculate": "25422788",
        "as": "total_persons"
      },
      {
        "calculate": "format(datum.responses/datum.total_persons * 100, '.1f')",
        "as": "percent_total_pop"
      },
      {
        "filter": "datum.ancestry != 'total_persons'"
      }
    ],
    "encoding": {
      "theta": {"field": "ancestry", "type": "nominal"},
      "radius": {"field": "responses", "scale": {"type": "sqrt", "zero": true}},
      "color": {"field": "ancestry", "type": "nominal", "title": "Ancestry"},
      "tooltip": [
        {"field": "ancestry", "title": "Ancestry"}, 
        {"field": "responses", "title": "Persons"},
        {"field": "percent_total_pop", "title":"Share of population (%)"}
      ]
    },
    "layer": [
      {
        "mark": {"type": "arc", "innerRadius": 20}
      },
      {
        "mark": {
          "type": "text",
          "radius": {"field": "responses"},
          "align": "center",
          "baseline": "middle"
        },
        "encoding": {
          "text": {"field": "responses", "type": "quantitative"},
          "color": {"value": "black"}
        }
      }
    ]
  }
  