{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A radial bar chart with distinct segments for each category.",
    "data": {
      "url": "https://raw.githubusercontent.com/jfoo-monash/FIT_3179_Assignment_2/refs/heads/main/json/data/all_ancestry.csv"
    },
    "mark": {"type": "arc", "innerRadius": 50},
    "encoding": {
      "theta": {"field": "category", "type": "nominal"},
      "radius": {"field": "value", "scale": {"type": "linear", "zero": true, "rangeMin": 20}},
      "color": {"field": "category", "type": "nominal"},
      "tooltip": [{"field": "category"}, {"field": "value"}]
    }
  }
  