{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text": "Australia's Religious Affiliations", "fontSize": 18},
  "data": {
    "url": "https://raw.githubusercontent.com/jfoo-monash/FIT_3179_Assignment_2/refs/heads/main/json/data/australia_religion.json"
  },
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Religion",
      "type": "nominal",
      "axis": {"title": "Religion"},
      "title": "Religion"
    },
    "xOffset": {
      "field": "Sex",
      "type": "nominal"
    },
    "y": {
      "field": "Population",
      "type": "quantitative",
      "axis": {"title": "Persons"},
      "title": "Persons"
    },
    "color": {
      "field": "Sex",
      "type": "nominal",
      "legend": {"title": "Sex"},
      "scale": {"range": ["#ff7f0e", "#1f77b4"]}
    },
    "tooltip": [
      {"field": "Sex", "type": "nominal"},
      {"field": "Population", "type": "quantitative", "title": "Persons"},
      {"field": "Total", "type": "quantitative", "title": "Grand Total"}
    ]
  },
  "config": {
    "bar": {"width": 20}
  }
}
